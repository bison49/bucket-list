<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="shortcut icon" href="{{asset('img/favicon.png')}}" type="image/x-icon">
        <title>{% block title %}Bucket-List{% endblock %}</title>
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        {% block stylesheets %}
            
        {% endblock %}

        {% block javascripts %}
            
        {% endblock %}
    </head>
    <body>
        <div class="grid-container">
            <header>
                <div class="header-top">
                    <div class="first">
                        <img class="logo" src="{{asset('img/logo.png')}}" alt="logo bucket list">
                    </div>
                    <div class="second">
                        <nav>
                            <ul>
                                {% for key,value in menu %}
                                    <li>
                                        {% if value != "#" %}
                                            <a href="{{path(value)}}">
                                                {{key}}
                                            </a>
                                        {% else %}
                                            <a href="#">
                                                {{key}}
                                            </a>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </nav>
                    </div>
                </div>
                
            </header>
            <main>
                {% block body %}{% endblock %}
            </main>
            <footer>
                  <p>
                    &copy; Bucket-List {{"now"|date("Y")}}
                  </p>
            </footer>
        </div>
    </body>
</html>
